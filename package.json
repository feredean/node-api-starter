{
    "name": "api",
    "version": "1.0.0",
    "description": "REST API scaffolding",
    "license": "MIT",
    "author": "Tiberiu Feredean",
    "repository": {
        "type": "git",
        "url": "https://github.com/feredean/node-api-starter"
    },
    "scripts": {
        "start": "NODE_PATH=$STARTER_PATH node dist/server.js",
        "build": "npm run build-ts && npm run lint",
        "build-ts": "tsc",
        "lint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet --fix",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "NODE_PATH=$STARTER_PATH nodemon dist/server.js",
        "watch-ts": "tsc -w",
        "test": "jest --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "check-deps": "npm audit && ncu"
    },
    "dependencies": {
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "fbgraph": "^1.4.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "mongoose": "^5.6.9",
        "morgan": "^1.9.1",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "uuid": "^3.3.2",
        "validator": "^11.1.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "1.0.0",
        "@types/cors": "^2.8.5",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/jest": "^24.0.17",
        "@types/jsonwebtoken": "^8.3.3",
        "@types/lodash": "^4.14.136",
        "@types/mongoose": "^5.5.12",
        "@types/morgan": "^1.7.36",
        "@types/nodemailer": "^6.2.1",
        "@types/passport": "^1.0.0",
        "@types/passport-facebook": "^2.1.9",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.5",
        "@types/validator": "^10.11.2",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "concurrently": "^4.1.1",
        "eslint": "^6.1.0",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "npm-check-updates": "^3.1.21",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    }
}
